<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="92" minHeight="58"  maxWidth="800"
             alpha.disabled="0.5" iconGroupPaddingBottom="24" iconGroupPaddingLeft="8" iconGroupPaddingRight="8">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <fx:Script fb:purpose="styling">
        <![CDATA[         
            /* Define the skin elements that should not be colorized. 
            For button, the graphics are colorized but the label is not. */
            static private const exclusions:Array = ["labelDisplay"];
            
            /** 
             * @private
             */     
            override public function get colorizeExclusions():Array {return exclusions;}
            
            /**
             * @private
             */
            override protected function initializationComplete():void
            {
                useChromeColor = true;
                super.initializationComplete();
				
            }  
        ]]>        
    </fx:Script>
        
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
    
    <!--- @private -->
    <s:Rect left="2" right="2" top="0" bottom="0" topLeftRadiusX="10" topRightRadiusX="10">
        <s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xFDFDFD"/>
				<s:GradientEntry color="0xC0C0C0"/>
			</s:LinearGradient>
        </s:fill>
		<s:stroke>
			<s:SolidColorStroke color="#cdcdcd"/>
		</s:stroke>
    </s:Rect>
    <s:Rect left="10" right="10" top="10" height="19" radiusX="8">
        <s:fill>
            <s:SolidColor color="#377784"/>
        </s:fill>
    </s:Rect>
    
    <!-- layer 8: text -->
    <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
    <s:Label id="labelDisplay" color="#FFFFFF" paddingLeft="4" paddingRight="4"
             textAlign="center" left="14" right="14"
             maxDisplayedLines="1" verticalAlign="middle" top="2" bottom="28" verticalCenter="1">
    </s:Label>
    
</s:SparkButtonSkin>
